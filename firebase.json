{
  "hosting": {
    "public": "out",
    "rewrites": [
      {
        "source": "/api/leads",
        "function": "leads"
      },
      {
        "source": "/api/sim/generate",
        "function": "simGenerate"
      },
      {
        "source": "/api/sim/verify",
        "function": "simVerify"
      },
      {
        "source": "/api/early-access",
        "function": "submitEarlyAccess"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "runtime": "nodejs20",
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "apphosting": {
      "port": 5002,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  }
}
